@using CodeWork.Entities.Dtos
@model MemberDto
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>Member Update</li>
                <li><a class="link-effect" href="/">Ana Sayfa</a></li>
            </ol>
        </div>
    </div>
</div>
<div class="content">
    @if (TempData.ContainsKey("memberUpdateError"))
    {
        <div class="alert alert-danger fade in alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            <strong>HATA! <br /></strong> @MvcHtmlString.Create(TempData["memberUpdateError"].ToString())
        </div>
        TempData.Remove("memberUpdateError");
    }
    <div class="row">
        <div class="col-md-12">
            <div class="block clearfix" style="padding: 20px">

                @using (Html.BeginForm("Update", "Member", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-group">
                        <div class="col-xs-9 col-md-9 col-lg-4">
                            <label for="doc-name">Adı</label>
                            @*<div class="input-group">*@
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-md-9 col-lg-4">
                            <label for="doc-name">Soyad</label>
                            @*<div class="input-group">*@
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-md-9 col-lg-4">
                            <label for="doc-name">Tc No</label>
                            @*<div class="input-group">*@
                            @Html.TextBoxFor(m => m.TCNo, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-md-9 col-lg-4">
                            <label for="doc-name">Email</label>
                            @*<div class="input-group">*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-md-9 col-lg-4">
                            <label for="doc-name">Telefon No</label>
                            @*<div class="input-group">*@
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-md-9  col-lg-4">
                            <label for="doc-name">Aktif Mi</label>
                            @Html.CheckBoxFor(m => m.IsActive, new { style = "vertical-align:sub" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input hidden value="@Model.Id" name="memberId" />

                            <button id="btnSubmit" type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 